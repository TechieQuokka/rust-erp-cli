# ERP CLI 환경 변수 설정 예시
# 이 파일을 복사해서 .env로 만들고 실제 값을 입력하세요

# 애플리케이션 환경 설정
ERP_ENV=development
RUST_LOG=info

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5513/erp_db
# SQLite 예시: sqlite://erp.db

# JWT 인증 설정
JWT_SECRET=4b3d7a5f827a51459b93ba7a25c34817404d7fcdc5db9b4a27319c57ff23521b

# Redis 캐시 설정 (선택사항)
REDIS_URL=redis://localhost:6379

# API 서버 설정
HOST=127.0.0.1
PORT=8080

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=logs/erp.log

# 보안 설정
ENCRYPTION_KEY=ltxTP1vA66ht89LRTc91HPBehgOBdJvnnW/gi77X3Ep7RQtsRiwGtkvdptawZ3SK
BCRYPT_COST=12

# 외부 서비스 연동 (선택사항)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password

# Slack 알림 (선택사항)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# AWS 설정 (파일 저장용, 선택사항)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=ap-northeast-2
# AWS_S3_BUCKET=erp-files

# 보고서 출력 설정
REPORTS_DIR=reports
REPORTS_MAX_SIZE=10000

# 재고 관리 설정
LOW_STOCK_THRESHOLD=10
AUTO_REORDER_ENABLED=false

# 영업 관리 설정
DEFAULT_CURRENCY=KRW
DEFAULT_TAX_RATE=0.1
INVOICE_PREFIX=INV
ORDER_PREFIX=ORD

# 성능 설정
MAX_CONNECTIONS=10
QUERY_TIMEOUT=30
REQUEST_TIMEOUT=30

# 개발 환경 전용 (개발 시에만 사용)
DEV_SEED_DATA=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_QUERIES=false

# 프로덕션 환경 전용 (배포 시에만 사용)
PROD_ENABLE_METRICS=true
PROD_ENABLE_AUDIT_LOG=true
PROD_SESSION_TIMEOUT=3600